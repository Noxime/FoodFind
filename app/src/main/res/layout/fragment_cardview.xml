<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FoodCardFragment">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_margin="4dp"
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        card_view:cardCornerRadius="2dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentLeft="true"
                android:id="@+id/cardPreviewImage"

                />

            <TextView
                android:paddingLeft="160dp"
                android:paddingTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="FoodName"
                android:id="@+id/cardFoodName"
                android:layout_alignParentTop="true"
                />
            <TextView
                android:paddingRight="12dp"
                android:paddingTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="FoodPrice"
                android:id="@+id/cardFoodPrice"
                android:layout_alignParentRight="true"
                />

            <TextView
                android:paddingLeft="160dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Restaurant"
                android:id="@+id/cardRestaurantName"
                android:layout_below="@+id/cardFoodName" />

            <TextView
                android:paddingLeft="160dp"
                android:paddingRight="12dp"
                android:paddingTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FoodDescription"
                android:id="@+id/cardFoodDescription"
                android:layout_below="@+id/cardRestaurantName"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>
